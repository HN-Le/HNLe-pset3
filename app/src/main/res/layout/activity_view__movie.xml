<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.watchlist.View_Movie">

    <TextView
        android:id="@+id/movie_data_title"
        android:layout_width="288dp"
        android:layout_height="40dp"
        android:ems="20"
        android:inputType="textMultiLine"
        android:text="TITLE"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.033" />

    <TextView
        android:id="@+id/movie_data_year"
        android:layout_width="288dp"
        android:layout_height="40dp"
        android:ems="20"
        android:inputType="textMultiLine"
        android:text="YEAR"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.118" />

    <TextView
        android:id="@+id/movie_data_directors"
        android:layout_width="288dp"
        android:layout_height="40dp"
        android:ems="20"
        android:inputType="textMultiLine"
        android:text="DIRECTORS"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.203" />

    <TextView
        android:id="@+id/movie_data_actors"
        android:layout_width="288dp"
        android:layout_height="40dp"
        android:ems="20"
        android:inputType="textMultiLine"
        android:text="ACTORS"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.288" />

    <TextView
        android:id="@+id/movie_data"
        android:layout_width="288dp"
        android:layout_height="100dp"
        android:ems="20"
        android:inputType="textMultiLine"
        android:text="Plot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.428" />



</android.support.constraint.ConstraintLayout>

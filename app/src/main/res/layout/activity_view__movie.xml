<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.watchlist.View_Movie">

    <TextView
        android:id="@+id/movie_data_title"
        android:layout_width="288dp"
        android:layout_height="40dp"
        android:ems="20"
        android:inputType="textMultiLine"
        android:text="TITLE"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.033" />

    <TextView
        android:id="@+id/movie_data_year"
        android:layout_width="288dp"
        android:layout_height="40dp"
        android:ems="20"
        android:inputType="textMultiLine"
        android:text="YEAR"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.118" />

    <TextView
        android:id="@+id/movie_data_directors"
        android:layout_width="288dp"
        android:layout_height="40dp"
        android:ems="20"
        android:inputType="textMultiLine"
        android:text="DIRECTORS"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.203" />

    <TextView
        android:id="@+id/movie_data_actors"
        android:layout_width="288dp"
        android:layout_height="40dp"
        android:ems="20"
        android:inputType="textMultiLine"
        android:text="ACTORS"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.288" />

    <TextView
        android:id="@+id/movie_data"
        android:layout_width="288dp"
        android:layout_height="100dp"
        android:ems="20"
        android:inputType="textMultiLine"
        android:text="Plot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.428" />

    <ImageView
        android:id="@+id/poster_movie"
        android:layout_width="127dp"
        android:layout_height="151dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501" />

    <Button
        android:id="@+id/add"
        android:layout_width="125dp"
        android:layout_height="41dp"
        android:text="ADD / REMOVE"
        android:onClick="saveToSharedPrefs"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/movie_data"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintRight_toLeftOf="@+id/favs"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/favs"
        android:layout_width="88dp"
        android:layout_height="42dp"
        android:text="FAVS"
        android:onClick="favs"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/movie_data"
        app:layout_constraintHorizontal_bias="0.719" />

</android.support.constraint.ConstraintLayout>

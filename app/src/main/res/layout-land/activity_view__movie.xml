<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.watchlist.View_Movie">


    <TextView
        android:id="@+id/movie_data_title"
        android:layout_width="288dp"
        android:layout_height="40dp"
        android:ems="20"
        android:inputType="textMultiLine"
        android:text="TITLE"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.059"
        app:layout_constraintHorizontal_bias="0.052" />

    <TextView
        android:id="@+id/movie_data_year"
        android:layout_width="288dp"
        android:layout_height="40dp"
        android:ems="20"
        android:inputType="textMultiLine"
        android:text="YEAR"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.206"
        app:layout_constraintHorizontal_bias="0.052" />

    <TextView
        android:id="@+id/movie_data_directors"
        android:layout_width="288dp"
        android:layout_height="40dp"
        android:ems="20"
        android:inputType="textMultiLine"
        android:text="DIRECTORS"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.354"
        app:layout_constraintHorizontal_bias="0.052" />

    <TextView
        android:id="@+id/movie_data_actors"
        android:layout_width="288dp"
        android:layout_height="40dp"
        android:ems="20"
        android:inputType="textMultiLine"
        android:text="ACTORS"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.498"
        app:layout_constraintHorizontal_bias="0.052" />

    <TextView
        android:id="@+id/movie_data"
        android:layout_width="288dp"
        android:layout_height="100dp"
        android:ems="20"
        android:inputType="textMultiLine"
        android:text="Plot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.829"
        app:layout_constraintHorizontal_bias="0.052" />

    <ImageView
        android:id="@+id/poster_movie"
        android:layout_width="127dp"
        android:layout_height="151dp"
        android:layout_marginBottom="144dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.776" />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:text="ADD / REMOVE"
        android:onClick="saveToSharedPrefs"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="82dp"
        app:layout_constraintLeft_toRightOf="@+id/movie_data"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.372"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/poster_movie" />

    <Button
        android:id="@+id/favs"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="FAVS"
        android:onClick="favs"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/add"
        app:layout_constraintLeft_toRightOf="@+id/movie_data"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.428"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.396" />

</android.support.constraint.ConstraintLayout>
